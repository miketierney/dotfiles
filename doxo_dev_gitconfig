[user]
  name = Michael Tierney
  email = mike@panpainter.com
[github]
  user = panpainter
[color]
  sh = auto
  ui = true
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
  nobranch = red bold
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "sh"]
  branch = yellow
  workdir = green
[alias]
  co = checkout
  pl = pull
  pu = push
  st = status -sb
  stat = status
  br = branch
  ca = commit -v -a
  ci = commit -v
  sh = !git-sh
  # git log
  l = !git pretty-commit-log
  ll = !git l --max-count=15
  la = !git l --all
  # Git-SVN stuff
  update = svn rebase
  up = update
  dcommit = svn dcommit
[push]
  default = current
[pull]
  default = current
[help]
  autocorrect = 1
[core]
  editor = vim
