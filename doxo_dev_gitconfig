[user]
  name = Michael Tierney
  email = mike@panpainter.com
[github]
  user = panpainter
[color]
  sh = auto
  ui = true
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
  nobranch = red bold
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "sh"]
  branch = yellow
  workdir = green
[alias]
  # git commit
  commit = commit --verbose
  amend = commit --verbose --amend
  ci = commit --verbose
  ca = commit --verbose --all
  cn = commit --verbose --amend
  n = commit --verbose --amend

  # git add
  a = add
  aa = add --update
  ap = add --patch


  # git checkout
  co = checkout
  c = checkout

  # git fetch
  f = fetch
  pu = push
  pl = pull

  # git rebase
  # r = rebase --interactive HEAD~10

  # git diff
  d = diff --word-diff
  p = diff --cached # mnemonic: "patch"

  # git status
  s = status -sb
  st = status -sb
  stat = status

  # git show
  ss = show --name-only # "show short"
  sn = show --name-only # "show name"

  # git branch
  b = branch
  br = branch

  # git log
  l = !git pretty-commit-log
  ll = !git l --max-count=15
  la = !git l --all
  # Git-SVN stuff
  # sup = !sh -c 'git svn rebase && git log --pretty=format:\"%Cred%ae %Creset- %C(yellow)%s %Creset(%ar)\" HEAD@{1}'
  update = svn rebase
  up = update
  dcommit = svn dcommit
[push]
  default = current
[pull]
  default = current
[help]
  autocorrect = 1
[core]
  editor = vim
