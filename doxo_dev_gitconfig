# vim:ft=gitconfig

[user]
  name = Mike Tierney
  email = mike.tierney@doxo.com
[github]
  user = panpainter
[color]
  sh = auto
  ui = true
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
  nobranch = red bold
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "sh"]
  branch = yellow
  workdir = green
[alias]
  # git commit
  commit = commit --verbose
  amend = commit --verbose --amend
  ci = commit --verbose
  ca = commit --verbose --all
  cn = commit --verbose --amend
  n = commit --verbose --amend

  # git add
  a = add
  aa = add --update
  ap = add --patch

  hp = !git show-git-head


  # git checkout
  co = checkout
  c = checkout

  # git fetch
  f = fetch
  pu = push
  pl = pull

  # git rebase
  # r = rebase --interactive HEAD~10

  # git diff
  d = diff --word-diff
  p = diff --cached # mnemonic: "patch"

  # git status
  st = status
  s = status -sb
  stat = status -sb

  # git show
  ss = show --name-only # "show short"
  sn = show --name-only # "show name"

  # git stash
  sts = stash save
  sta = stash apply
  stp = stash pop

  # git branch
  b = branch
  br = branch

  # git log
  l = !git pretty-commit-log
  ll = !git l --max-count=15
  la = !git l --all
[push]
	default = tracking
[pull]
  default = current
[help]
  autocorrect = 1
[core]
  editor = vim
  excludesfile = /home/mike/.gitignore_global
  whitespace = trailing-space,space-before-tab
[diff]
  mnemonicprefix = true
  renames = copies
[advice]
  pushNonFastForward = false
[branch]
  autosetupmerge = true
	autosetuprebase = always
[merge]
  stat = true
