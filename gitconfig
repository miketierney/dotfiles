[alias]
  # git commit
  commit = commit --verbose
  amend = commit --verbose --amend
  ci = commit --verbose
  ca = commit --verbose --all
  cn = commit --verbose --amend
  n = commit --verbose --amend

  # git add
  a = add
  aa = add --update
  ap = add --patch


  # git checkout
  co = checkout
  c = checkout

  # git fetch
  f = fetch
  pu = push
  pl = pull

  # git rebase
  # r = rebase --interactive HEAD~10

  # git diff
  d = diff --word-diff
  p = diff --cached # mnemonic: "patch"

  kd = difftool -y -t Kaleidoscope
  kp = difftool --cached -y -t Kaleidoscope
  ksd = difftool -y -t Kaleidoscope
  ksdiff = difftool -y -t Kaleidoscope

  # git status
  status = status -sb
  st = status -sb
  s = status -sb
  stat = status -sb

  # git show
  ss = show --name-only # "show short"
  sn = show --name-only # "show name"

  # git stash
  sts = stash save
  sta = stash apply
  stp = stash pop

  # git branch
  b = branch
  br = branch

  # push development to heroku
  pdth = !git push heroku development:master

  # git log
  # L = log --decorate
  # l = log --pretty=oneline --decorate --abbrev-commit
  # ll = log --pretty=oneline --decorate --abbrev-commit --max-count=15
  l = "!source ~/.githelpers && pretty_git_log"
  ll = !git l --max-count=15
  la = !git l --all

  hp = "!source ~/.githelpers && show_git_head"

  # up = !sh -c 'git pull --rebase --prune && git log --pretty=format:\"%Cred%ae %Creset- %C(yellow)%s %Creset(%ar)\" HEAD@{1}..'
  sh = !git-sh

  # git cherry-pick
  cp = cherry-pick

[push]
  default = tracking
[pull]
  default = current
[color]
  ui = true
  sh = auto
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
  nobranch = red
